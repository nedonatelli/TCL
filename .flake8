[flake8]
# Allow longer lines - black handles most formatting
max-line-length = 100

# Ignore E203 (whitespace before ':') - black intentionally violates this
# Ignore W503 (line break before binary operator) - black prefers this style
# Ignore E501 (line too long) - black handles line length, some imports may be longer
extend-ignore = E203, W503, E501

# Allow unused imports in __init__.py files (re-exports)
per-file-ignores =
    __init__.py:F401
